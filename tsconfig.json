// https://github.com/microsoft/TypeScript-Node-Starter/blob/master/tsconfig.json
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "@": ["src/scrappeteer/index"],
      "@/*": ["src/scrappeteer/*"],
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src/**/*"]
}
